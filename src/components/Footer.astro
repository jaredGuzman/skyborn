---
const currentYear = new Date().getFullYear()
---

<footer>
  <section class="py-8">
    <div class="container">
      <p>
        &copy; Skyborn Studios - Copyright {currentYear}. Made with ❤️ by Jared Guzman.
      </p>
    </div>
  <script>
    if (window.netlifyIdentity) {
    window
      .netlifyIdentity
      .on("init", user => {
        if (!user) {
          window
            .netlifyIdentity
            .on("login", () => {
              document.location.href = "/admin/";
            });
        }
      });
    }
  </script>
  </section>
</footer>
