---
import ThemeToggle from "./ThemeToggle.astro"
const currentYear = new Date().getFullYear()
---

<footer class="inset-shadow-md">
  <div class="container">

    <!-- Footer Columns -->
    <div class="footer-content">
      <div class="company-info flex flex-col items-center">
        <h3 class="footer-text">Skyborn Studios</h3>
        <p class="footer-text">Independent game development studio building games for the love of it.</p>
      </div>

      <nav class="footer-nav">
        <div class="nav-column">
          <h3 class="footer-text">Company</h3>
          <ul>
            <li class="footer-text"><a href="/about">About Us</a></li>
            <li class="footer-text"><a href="/games">Our Games</a></li>
            <li class="footer-text"><a href="/blog">Blog</a></li>
            <!-- <li class="footer-text"><a href="/careers">Careers</a></li> -->
          </ul>
        </div>

        <div class="nav-column">
          <h3>Resources</h3>
          <ul>
            <!-- <li class="footer-text"><a href="/press">Press Kit</a></li> -->
            <li class="footer-text"><a href="/support">Support</a></li>
            <li class="footer-text"><a href="/privacy">Privacy Policy</a></li>
            <li class="footer-text"><a href="/terms-of-service">Terms of Service</a></li>
          </ul>
        </div>

        <div class="nav-column">
          <h3 class="footer-text">Contact</h3>
          <ul>
            <li class="footer-text">sybornstudios.devs@gmail.com</li>
            <!-- <li>Discord Community</li> -->
          </ul>
        </div>
      </nav>
    </div>

    <div class="dark-mode">
      <ThemeToggle />
      </div>
    <!-- Copyright -->
    <div class="copyright">
      <p class="footer-text">&copy; {currentYear} Skyborn Studios. All rights reserved.</p>
    </div>
  </div>
</footer>

<style lang="scss" is:global>
  @use '../assets/scss/base/breakpoint' as *;
  @use '../assets/scss/base/outline' as *;

  .footer-content {
    text-align: center;
  }

  footer {
  padding: 4rem 0 2rem 0;
  background: var(--background);
  
  .container {
    max-width: var(--container-max-width, 1200px);
    margin: 0 auto;
    padding-left: 4rem;
    padding-right: 4rem;
    padding-bottom: 0 var(--container-padding, 1rem);
    padding-top: 0 var(--container-padding, 1rem);
  }

  .footer-content {
    display: grid;
    gap: 3rem;
    
    @include breakpoint(medium) {
      grid-template-columns: 1fr 2fr;
    }

    .company-info {
      h3 {
        margin-bottom: 0.5rem;
        font-size: 1.5rem;
      }
      
      p {
        max-width: 25ch;
        opacity: 0.8;
      }
    }
  }

  .footer-nav {
    display: grid;
    gap: 2rem;
    
    @include breakpoint(medium) {
      grid-template-columns: repeat(3, 1fr);
    }

    .nav-column {
      h3 {
        font-size: 1.5rem;
        margin-bottom: 1rem;
        font-weight: 600;
      }

      ul {
        list-style: none;
        padding: 0;
        margin: 0;
        
        li {
          margin-bottom: 0.5rem;

          a {
            opacity: 0.8;
            transition: opacity 0.2s;
            
            &:hover {
              opacity: 1;
            }
          }
        }
      }
    }
  }
  .dark-mode {
    margin-top: 2rem;
    margin-bottom: 2rem;
  }

  .copyright {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 1px solid var(--neutral-200);
    text-align: center;
    opacity: 0.8;
  }
}
</style>