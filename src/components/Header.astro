---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon/components'
---

<header class="sticky top-0 left-0 right-0 justify-center z-[999] w-full shadow-md h-fit" style="view-transition-name: nav">
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/" aria-label="Home">Home</a>
    </li>
    <li class="menu-item">
      <a href="/games/" aria-label="Games">Games</a>
    </li>
    <li class="menu-item">
      <a href="/join/" aria-label="Join">Join</a>
    </li>
    <li class="menu-item">
      <a href="/blog/" aria-label="Blog">Blog</a>
    </li>
    <!-- <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Example Pages</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/markdown-page, mdx-page, accessible-components/">Markdown Page</a>
        </li>
      </ul>
    </li> -->
    <li class="menu-item">
      <a
        href="https://buymeacoffee.com/skybornstudios"
        title="support us link"
        target="_blank"
        rel="external noopener noreferrer"
        aria-label="Support Us"
        >Support Us</a
      >
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    min-height: 4rem;
    background-color: var(--background);
    .type-icon a {
      display: block;

      [data-icon] {
        height: auto;
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
        }
      }

      &:hover {
        [data-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
